<resources>

    <!--Customized application theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Section Style - Main Page-->
    <style name="SectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/SectionPadding</item>
        <item name="android:textColor">@color/DarkCyan</item>
        <item name="android:textSize">@dimen/Font20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Main App Selection - Dark Long Divider Lines-->
    <style name="DividerLine_Albums">
        <item name="android:background">@color/DarkGray</item>
    </style>

    <!-- Song Selection - Light Small Divider Lines-->
    <style name="DividerLine_Song">
        <item name="android:layout_width">@dimen/DividerLineWidth_Sm</item>
        <item name="android:layout_height">@dimen/DividerLineHeight_Sm</item>
        <item name="android:layout_marginTop">@dimen/Margin2dp</item>
        <item name="android:layout_marginBottom">@dimen/Margin2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/MediumGray</item>
    </style>

    <style name="SongNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/Margin10dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/MediumCyan</item>
        <item name="android:textSize">@dimen/Font15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArtistNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/Margin10dp</item>
        <item name="android:textColor">@color/DarkCyan</item>
        <item name="android:textSize">@dimen/Font15sp</item>
    </style>

    <style name="SongTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/LightGray</item>
        <item name="android:textSize">@dimen/Font15sp</item>
    </style>

    <style name="PlayArrow">
        <item name="android:layout_width">@dimen/PlayArrowSize</item>
        <item name="android:layout_height">@dimen/PlayArrowSize</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/PlayArrowPadding</item>
        <item name="android:textSize">@dimen/Font20sp</item>
    </style>

